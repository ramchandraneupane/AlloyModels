<Alloy>
	<Collection src="Picture" /> <!-- this initializes the model -->
	<NavigationWindow id="navWin" platform="ios">
		<Window title="Picture List">
			<View>
				<TableView id="tvList" dataCollection="Picture">
					<TableViewRow id="row" layout="vertical" dataId="" onClick="doClickOnTV" model="{alloy_id}"> <!-- As we did not specify an 'id' in the model, we use the autogenerated {alloy_id} -->
						<Label id="title" text="{title}" />
						<ImageView image="{path}" />
					</TableViewRow>
				</TableView>	
			</View>
	</Window>
	</NavigationWindow>
</Alloy>